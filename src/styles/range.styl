input[type=range]
	-webkit-appearance none
	width 100%
	margin 13.8px 0

input[type=range]:focus
	outline none
	&::-webkit-slider-runnable-track
		background #367ebd
	&::-ms-fill-lower
		background #607D8B
	&::-ms-fill-upper
		background #367ebd

input[type=range]::-webkit-slider-runnable-track
	width 100%
	height 4px
	cursor pointer
	// box-shadow 1px 1px 1px #000000, 0px 0px 1px #0d0d0d
	background #607D8B
	border-radius 1.3px
	border 0.2px solid #010101
input[type=range]::-webkit-slider-thumb
	// box-shadow 1px 1px 1px #000000, 0px 0px 1px #0d0d0d
	border 1px solid #000000
	height 24px
	width 12px
	border-radius 3px
	background #455A64
	cursor pointer
	-webkit-appearance none
	margin-top -10px
input[type=range]::-moz-range-track
	width 100%
	height 8.4px
	cursor pointer
	// box-shadow 1px 1px 1px #000000, 0px 0px 1px #0d0d0d
	background #607D8B
	border-radius 1.3px
	border 0.2px solid #010101
input[type=range]::-moz-range-thumb
	// box-shadow 1px 1px 1px #000000, 0px 0px 1px #0d0d0d
	border 1px solid #000000
	height 24px
	width 12px
	border-radius 3px
	background #455A64
	cursor pointer
input[type=range]::-ms-track
	width 100%
	height 8.4px
	cursor pointer
	background transparent
	border-color transparent
	color transparent
input[type=range]::-ms-fill-lower
	background #2a6495
	border 0.2px solid #010101
	border-radius 2.6px
	// box-shadow 1px 1px 1px #000000, 0px 0px 1px #0d0d0d
input[type=range]::-ms-fill-upper
	background #607D8B
	border 0.2px solid #010101
	border-radius 2.6px
	// box-shadow 1px 1px 1px #000000, 0px 0px 1px #0d0d0d
input[type=range]::-ms-thumb
	// box-shadow 1px 1px 1px #000000, 0px 0px 1px #0d0d0d
	border 1px solid #000000
	height 24px
	width 12px
	border-radius 3px
	background #455A64
	cursor pointer
	height 8.4px
